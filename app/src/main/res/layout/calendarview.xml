<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent" 
	android:background="#FFFFFF">
 
	<LinearLayout
		android:id="@+id/selectmonth"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:background="#BC67C5" android:padding="5dp">
 
            <ImageButton android:id="@+id/btn_calendar_prevmonth"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:background="@drawable/prev"
                android:scaleType="fitCenter"
                />
            <TextView android:text=""
                       android:id="@+id/CalendarMonthTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="22dip"
                        android:gravity="center"
                        android:layout_weight="90" />
 
            <ImageButton android:id="@+id/btn_calendar_nextmonth"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:background="@drawable/next"
                android:scaleType="fitCenter"/>
 
    </LinearLayout>
 
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/calendar_scroll"
        android:background="#ffffff">
        <TableLayout
            android:id="@+id/tl_calendar_monthly"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </TableLayout>
    </ScrollView>
 
</LinearLayout>